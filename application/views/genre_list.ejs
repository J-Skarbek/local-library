<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="bg-red-100 text-4xl">
    <%- include('./partials/navHeader.ejs') %>
    <h1 class="text-4xl my-4""><%= title %></h1>
    <p class="text-4xl">Welcome to <%= title %></p>
    <p>This is the Genre list page</p>
    <ul>
      <% if (genre_list.length > 0) { %>
        <% genre_list.forEach(genre => { %>
          <li>
            <div class="flex-row">
              <p>
                <a href="<%= genre.url %>"><%= genre.name %></a>
              </p>
            </div>
          </li>
          <% }) %>
        <% } else { %>
          <p>There are no Genres to display.</p>
      <% }; %>
    </ul>
  </body>
</html>