<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="bg-red-100 text-4xl">
    <%- include('./partials/navHeader.ejs') %>
    <h1 class="text-4xl my-4""><%= title %></h1>
    <p class="text-4xl">Welcome to <%= title %></p>
    <p>This is the author list page</p>
    <ul>
      <% if (author_list.length > 0) { %>
        <% author_list.forEach(author => { %>
          <li>
            <div class="flex-row">
              <p>
                <a href="<%= author.name %>"><%= author.name %></a>
              </p>
                <p><%= author.birthday_formatted %> - <%= author.deathday_formatted !== '' ? author.deathday_formatted : ''; %></p>
            </div>
          </li>
          <% }) %>
        <% } else { %>
          <p>There are no authors to display.</p>
      <% }; %>
    </ul>
  </body>
</html>