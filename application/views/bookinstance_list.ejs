<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="bg-red-100 text-4xl">
    <%- include('./partials/navHeader.ejs') %>
    <h1 class="text-4xl my-4""><%= title %></h1>
    <p class="text-4xl">Welcome to <%= title %></p>
    <p>This is the book list page</p>
    <ul>
      <% if (bookinstance_list.length > 0) { %>
        <% bookinstance_list.forEach(item => { %>
          <li>
            <div class="flex-row">
              <p>
                <a href="<%= item.url %>"><%= item.title %></a>
              </p>
              <p><%= item.book.title || item.imprint %></p>
              <% if (item.status === 'Available') { %>
                <p class="book-available"><%= item.status %></p>
              <% } else if (item.status === 'Maintenance') { %>
                <p class="book-in-maintenance"><%= item.status %></p>
              <% } else { %>
                <p class="book-is-out"><%= item.due_back %></p>
              <% } %>
            </div>
          </li>
          <% }) %>
        <% } else { %>
          <p>There are no books to display.</p>
      <% }; %>
    </ul>
  </body>
</html>